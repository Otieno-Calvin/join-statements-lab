rows = cur.execute('''
    SELECT o.officeCode, o.city, COUNT(e.employeeNumber) AS numberOfEmployees
    FROM offices o
    LEFT JOIN employees e ON o.officeCode = e.officeCode
    GROUP BY o.officeCode
    HAVING COUNT(e.employeeNumber) = 0;
''').fetchall()

for row in rows:
    print(row)





